{
  "name": "workfree-production-2",
  "version": "1.0.0",
  "description": "WorkFree Production 2 - SaaS Edition with Multi-Tenant Support",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "preview": "vite preview",
    "check": "svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-check --tsconfig ./tsconfig.json --watch",
    "lint": "prettier --plugin-search-dir . --check . && eslint .",
    "format": "prettier --plugin-search-dir . --write .",
    "test": "playwright test",
    "test:unit": "vitest",
    "test:coverage": "vitest --coverage",
    "db:generate": "drizzle-kit generate:sqlite",
    "db:migrate": "drizzle-kit migrate:sqlite",
    "db:push": "drizzle-kit push:sqlite",
    "db:studio": "drizzle-kit studio",
    "db:seed": "node scripts/seed.js",
    "db:optimize": "node scripts/optimize-db.js",
    "deploy": "npm run build && wrangler pages deploy build"
  },
  "devDependencies": {
    "@playwright/test": "^1.40.0",
    "@sveltejs/adapter-cloudflare": "^2.3.0",
    "@sveltejs/kit": "^2.0.0",
    "@tailwindcss/forms": "^0.5.7",
    "@tailwindcss/typography": "^0.5.10",
    "@types/node": "^20.10.0",
    "@typescript-eslint/eslint-plugin": "^6.13.0",
    "@typescript-eslint/parser": "^6.13.0",
    "autoprefixer": "^10.4.16",
    "drizzle-kit": "^0.20.0",
    "eslint": "^8.54.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-svelte": "^2.35.0",
    "postcss": "^8.4.32",
    "prettier": "^3.1.0",
    "prettier-plugin-svelte": "^3.1.0",
    "svelte": "^4.2.0",
    "svelte-check": "^3.6.0",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3",
    "vite": "^5.0.0",
    "vitest": "^1.0.0",
    "wrangler": "^3.26.0"
  },
  "dependencies": {
    "@lucia-auth/adapter-sqlite": "^3.0.0",
    "bcrypt": "^5.1.1",
    "drizzle-orm": "^0.29.0",
    "lucia": "^3.0.0",
    "stripe": "^14.0.0",
    "resend": "^2.0.0",
    "better-sqlite3": "^9.2.0"
  }
}

